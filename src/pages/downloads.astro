---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Downloads';
const description = 'Download Apps';
const permalink = `${Astro.site.href}downloads`;

const downloads = [
  {
  name: "DiscoProcs Linux X86_64 (Intel/AMD) zip package ",
    version: "v1.0.0",
    file: "/downloads/DiscoProcs-LinuxX64.zip",
    size: "35.4 MiB"
  }
];

---

<BaseLayout title={title} description={description} permalink={permalink} current="downloads">
  <div class="container">
    <h1>Downloads</h1>
    <h2>Cross-Platform - C# .Net Core 9.x</h2>
    <p>
    
    <ul>
       {downloads.map(d => (
        <li>
          <strong>{d.name}</strong> ({d.version}) â€” {d.size}
          <br />
          <a href={d.file} download>Download</a>
        </li>
      ))}

    </ul>
    </p>
</BaseLayout>

<style>
  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
    }
  }
</style>
